{
  "name": "blackmamba-studio",
  "productName": "BlackMamba Studio",
  "version": "1.0.0",
  "description": "Professional cross-platform video editor with FFmpeg integration - Join, cut, and order clips with a cinematic interface",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "web": "node src/web/server.js",
    "dashboard": "node src/cli/dashboard.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "test": "jest --coverage",
    "build": "npm run build:win && npm run build:mac",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.blackmamba.studio",
    "productName": "BlackMamba Studio",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Blackmvmba88/VIdeoEditor.git"
  },
  "keywords": [
    "video",
    "editor",
    "ffmpeg",
    "electron",
    "cross-platform"
  ],
  "author": "Video Editor Pro Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "fluent-ffmpeg": "^2.1.2",
    "uuid": "^9.0.1"
  }
}
